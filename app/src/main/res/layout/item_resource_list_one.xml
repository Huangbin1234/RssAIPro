<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/item_na_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/ll_selector"
        android:elevation="4dp"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        app:cardCornerRadius="2dp"
        app:cardElevation="2dp">


        <RelativeLayout
            android:id="@+id/irl_top_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/irl_iv_top"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:backgroundTintMode="src_in"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_place" />

            <TextView
                android:id="@+id/irl_tv_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/irl_iv_top"
                android:background="@color/bg_top"
                android:padding="10dp"
                android:textColor="@color/white"
                android:textSize="@dimen/s16p" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/irl_tv_top_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="@color/color_general_line"
        android:textSize="@dimen/s14p" />
</LinearLayout>