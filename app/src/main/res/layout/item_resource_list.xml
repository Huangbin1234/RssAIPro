<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_na_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="1px"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:background="@drawable/ll_selector"
    android:elevation="4dp"
    android:layout_marginTop="10dp"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/irl_top_rl"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/irl_iv_top"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTintMode="src_in"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_place" />

            <TextView
                android:id="@+id/irl_tv_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/irl_iv_top"
                android:background="@color/bg_theme"
                android:padding="5dp"
                android:textColor="@color/white"
                android:textSize="@dimen/s14p" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/irl_top_ll1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/ll_selector"
                android:clickable="true"
                android:orientation="horizontal"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/irl_iv_top1"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/ic_place" />

                <TextView
                    android:id="@+id/irl_tv_top1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textSize="@dimen/s14p" />
            </LinearLayout>

            <View
                android:id="@+id/irl_view_line_2"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/color_general_line" />

            <LinearLayout
                android:id="@+id/irl_top_ll2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/ll_selector"
                android:clickable="true"
                android:orientation="horizontal"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/irl_iv_top2"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/ic_place" />

                <TextView
                    android:id="@+id/irl_tv_top2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textSize="@dimen/s14p" />
            </LinearLayout>

            <View
                android:id="@+id/irl_view_line_3"
                android:layout_width="match_parent"
                android:layout_height="1px"

                android:background="@color/color_general_line" />

            <LinearLayout
                android:id="@+id/irl_top_ll3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/ll_selector"
                android:clickable="true"
                android:orientation="horizontal"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/irl_iv_top3"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/ic_place" />

                <TextView
                    android:id="@+id/irl_tv_top3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textSize="@dimen/s14p" />
            </LinearLayout>

            <View
                android:id="@+id/irl_view_line_4"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/color_general_line" />

            <LinearLayout
                android:id="@+id/irl_top_ll4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/ll_selector"
                android:clickable="true"
                android:orientation="horizontal"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/irl_iv_top4"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/ic_place" />

                <TextView
                    android:id="@+id/irl_tv_top4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textSize="@dimen/s14p" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


    <!--</LinearLayout>-->
</android.support.v7.widget.CardView>