<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              style="@style/title_all"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <include layout="@layout/include_sub_toolbar"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="vertical"
            android:paddingBottom="10dp">

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/color_general_line"/>

            <LinearLayout
                style="@style/InfoDetail"
                android:gravity="center">

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"

                    android:text="账号"
                    android:textColor="@color/text_color_new"
                    android:textSize="@dimen/s16p"/>

                <EditText
                    android:id="@+id/la_et_userName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    android:background="@color/trans"
                    android:hint="@string/str_la_hint_uname"
                    android:maxLength="16"
                    android:padding="16dp"
                    android:singleLine="true"
                    android:textColor="@color/text_color_new"
                    android:textColorHint="#BBBBBB"
                    android:textSize="@dimen/s16p"
                    android:theme="@style/EditUnderLineStyle"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/color_general_line"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="10dp"
                android:background="@color/color_general_line"/>

            <LinearLayout
                style="@style/InfoDetail"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"

                    android:text="密码"
                    android:textColor="@color/text_color_new"
                    android:textSize="@dimen/s16p"/>

                <EditText
                    android:id="@+id/la_et_password"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    android:background="@color/trans"
                    android:hint="@string/str_la_hint_upsd"
                    android:inputType="textPassword"
                    android:maxLength="16"
                    android:padding="16dp"
                    android:singleLine="true"
                    android:textColor="@color/text_color_new"
                    android:textColorHint="#BBBBBB"
                    android:textSize="@dimen/s16p"
                    android:theme="@style/EditUnderLineStyle"/>

                <CheckedTextView
                    android:id="@+id/la_chktv_psd_control"
                    android:layout_width="30dp"
                    android:layout_height="18dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="16dp"
                    android:background="@drawable/chktv_selector"
                    android:button="@null"
                    android:visibility="gone"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/color_general_line"/>
        </LinearLayout>

        <Button
            android:id="@+id/la_btn_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/opr_bg_selector"
            android:text="@string/str_la_btn_login"
            android:textColor="@color/orange"
            android:textSize="@dimen/s16p"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp">

            <TextView
                android:id="@+id/la_tv_forget"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_gravity="right"
                android:layout_marginTop="16dp"
                android:text="@string/str_la_forget"
                android:textColor="@color/color_reg_label"
                android:textSize="@dimen/s14p"/>

            <TextView
                android:id="@+id/la_tv_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_gravity="right"
                android:layout_marginTop="16dp"
                android:text="注册账户"
                android:textColor="@color/color_reg_label"
                android:textSize="@dimen/s14p"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>