<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/title_all"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/include_sub_toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/mc_ll_no_data"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_no_data" />
        </LinearLayout>

        <TextView
            android:padding="16dp"
            android:textColor="@color/color_title"
            android:id="@+id/mc_tv_title"
            android:background="@color/color_general_white"
            android:layout_width="match_parent"
            android:textSize="@dimen/s22p"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/mc_iv_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:textColor="@color/color_txt"
            android:background="@color/color_general_white"
            android:id="@+id/mc_tv_pubTime"
            android:layout_width="match_parent"
            android:textSize="@dimen/s14p"
            android:layout_height="wrap_content" />

        <TextView
            android:padding="16dp"
            android:background="@color/color_general_white"
            android:id="@+id/mc_tv_content"
            android:textSize="@dimen/s16p"
            android:textColor="@color/color_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingBottom="16dp"
            android:background="@color/color_general_white"
            android:id="@+id/mc_tv_url"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autoLink="all" />

    </LinearLayout>
</LinearLayout>

