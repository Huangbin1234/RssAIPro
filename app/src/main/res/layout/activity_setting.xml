<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              style="@style/title_all"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <include layout="@layout/include_sub_toolbar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg"
        android:orientation="vertical">
        <!-- TODO: Update blank fragment layout -->
        <LinearLayout
            android:id="@+id/sa_ll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/bg"
            android:orientation="vertical">


            <View
                style="@style/view_line_h"
                android:layout_marginTop="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_general_white"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/sa_rl_change_source"
                    style="@style/InfoDetail"
                    android:padding="16dp">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true">

                        <TextView
                            android:id="@+id/sa_tv_change_source"
                            style="@style/TextLabel"
                            android:text="@string/str_sa_change_source"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/sa_tv_change_source"
                            android:layout_marginTop="2dp"
                            android:text="@string/sa_tv_change_source_label"
                            android:textColor="@color/text_color_abstract"
                            android:textSize="@dimen/s12p"/>
                    </RelativeLayout>

                    <Switch
                        android:id="@+id/sa_sw_change_source"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"/>

                </RelativeLayout>

                <View
                    style="@style/view_line_h"
                    android:layout_marginLeft="16dp"
                    />

                <RelativeLayout
                    android:id="@+id/sa_rl_opr_image"
                    style="@style/InfoDetail"
                    android:padding="16dp">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true">

                        <TextView
                            android:id="@+id/sa_tv_opr_image"
                            style="@style/TextLabel"
                            android:text="@string/str_sa_opr_image"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/sa_tv_opr_image"
                            android:layout_marginTop="2dp"
                            android:text="@string/sa_tv_opr_image_label"
                            android:textColor="@color/text_color_abstract"
                            android:textSize="@dimen/s12p"/>
                    </RelativeLayout>

                    <Switch
                        android:id="@+id/sa_sw_no_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>

                <View
                    style="@style/view_line_h"
                    android:layout_marginLeft="16dp"
                    />


                <RelativeLayout
                    android:id="@+id/sa_rl_cold_reboot"
                    style="@style/InfoDetail"
                    android:padding="16dp">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true">

                        <TextView
                            android:id="@+id/sa_tv_cold_reboot"
                            style="@style/TextLabel"
                            android:text="@string/str_sa_cold_reboot"/>

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/sa_tv_cold_reboot"
                            android:layout_marginTop="2dp"
                            android:text="@string/sa_tv_cold_reboot_label"
                            android:textColor="@color/text_color_abstract"
                            android:textSize="@dimen/s12p"/>
                    </RelativeLayout>


                    <Switch
                        android:id="@+id/sa_sw_cold_reboot"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"/>

                </RelativeLayout>

                <View style="@style/view_line_h"/>
            </LinearLayout>

            <View
                style="@style/view_line_h"
                android:layout_marginTop="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_general_white"
                android:orientation="vertical">


                <RelativeLayout
                    android:id="@+id/sa_rl_old_rec"
                    style="@style/InfoDetail"
                    android:padding="16dp">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true">

                        <TextView
                            android:id="@+id/sa_tv_old_rec"
                            style="@style/TextLabel"
                            android:text="@string/str_sa_old_rec"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/sa_tv_old_rec"
                            android:layout_marginTop="2dp"
                            android:text="@string/sa_tv_old_rec_label"
                            android:textColor="@color/text_color_abstract"
                            android:textSize="@dimen/s12p"/>
                    </RelativeLayout>


                    <Switch
                        android:id="@+id/sa_sw_old_rec"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"/>

                </RelativeLayout>

                <View
                    style="@style/view_line_h"
                    android:layout_marginLeft="16dp"
                    />

                <RelativeLayout
                    android:id="@+id/sa_rl_offline"
                    style="@style/InfoDetail"
                    android:padding="16dp">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true">

                        <TextView
                            android:id="@+id/sa_tv_offline"
                            style="@style/TextLabel"
                            android:text="@string/str_sa_offline"/>

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/sa_tv_offline"
                            android:layout_marginTop="2dp"
                            android:text="@string/sa_tv_offline_label"
                            android:textColor="@color/text_color_abstract"
                            android:textSize="@dimen/s12p"/>
                    </RelativeLayout>


                    <Switch
                        android:id="@+id/sa_sw_offline"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"/>

                </RelativeLayout>

                <View style="@style/view_line_h"/>
            </LinearLayout>

            <View
                style="@style/view_line_h"
                android:layout_marginTop="10dp"/>

            <RelativeLayout
                android:id="@+id/sa_rl_day_night"
                style="@style/InfoDetail"
                android:padding="16dp">


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true">

                    <TextView
                        android:id="@+id/sa_tv_day_night"
                        style="@style/TextLabel"
                        android:text="@string/str_sa_day_night"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/sa_tv_day_night"
                        android:layout_marginTop="2dp"
                        android:text="@string/sa_tv_day_night_label"
                        android:textColor="@color/text_color_abstract"
                        android:textSize="@dimen/s12p"/>
                </RelativeLayout>

                <Switch
                    android:id="@+id/sa_sw_day_night"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>

            <View style="@style/view_line_h"/>

            <View
                style="@style/view_line_h"
                android:layout_marginTop="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_general_white"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/sa_rl_theme"
                    style="@style/InfoDetail"
                    android:padding="16dp">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true">

                        <TextView
                            android:id="@+id/sa_tv_theme"
                            style="@style/TextLabel"
                            android:text="@string/str_sa_theme"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/sa_tv_theme"
                            android:layout_marginTop="5dp"
                            android:text="@string/str_theme_more"
                            android:textColor="@color/text_color_abstract"
                            android:textSize="@dimen/s12p"
                            android:visibility="gone"/>


                    </RelativeLayout>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:scaleType="centerInside"
                        app:srcCompat="@drawable/ic_chevron_right_black_24dp"/>
                    <!--android:src="@mipmap/ic_right_all"-->
                    <!--<TextView-->
                    <!--style="@style/TextLabel"-->
                    <!--android:text="@string/str_sa_theme" />-->

                    <!--<TextView-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_alignParentRight="true"-->
                    <!--android:layout_centerVertical="true"-->
                    <!--android:text="@string/str_theme_more"-->
                    <!--android:textColor="@color/text_color_abstract"-->
                    <!--android:textSize="@dimen/s12p" />-->
                </RelativeLayout>

                <View
                    style="@style/view_line_h"
                    android:layout_marginLeft="16dp"/>

                <RelativeLayout
                    android:id="@+id/sa_rl_share"
                    style="@style/InfoDetail"
                    android:padding="16dp">

                    <TextView
                        style="@style/TextLabel"
                        android:text="@string/str_sa_share"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:scaleType="centerInside"
                        app:srcCompat="@drawable/ic_chevron_right_black_24dp"/>
                    <!--android:src="@mipmap/ic_right_all"-->
                </RelativeLayout>

                <View
                    style="@style/view_line_h"
                    />
            </LinearLayout>

            <View
                style="@style/view_line_h"
                android:layout_marginTop="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_general_white"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/sa_rl_advice"
                    style="@style/InfoDetail"
                    android:padding="16dp">

                    <TextView
                        style="@style/TextLabel"
                        android:text="@string/str_sa_advice"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:scaleType="centerInside"
                        app:srcCompat="@drawable/ic_chevron_right_black_24dp"/>
                    <!--android:src="@mipmap/ic_right_all"-->
                </RelativeLayout>

                <View
                    style="@style/view_line_h"
                    android:layout_marginLeft="16dp"
                    />

                <RelativeLayout
                    android:id="@+id/sa_rl_about"
                    style="@style/InfoDetail"
                    android:padding="16dp">

                    <TextView
                        style="@style/TextLabel"
                        android:text="@string/str_sa_about"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:scaleType="centerInside"
                        app:srcCompat="@drawable/ic_chevron_right_black_24dp"/>
                    <!--android:src="@mipmap/ic_right_all"-->
                </RelativeLayout>

                <View style="@style/view_line_h"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="16dp"/>
        </LinearLayout>

    </ScrollView>
</LinearLayout>
