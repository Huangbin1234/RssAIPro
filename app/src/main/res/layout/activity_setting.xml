<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/title_all"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/include_sub_toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg"
        android:orientation="vertical">
        <!-- TODO: Update blank fragment layout -->
        <LinearLayout
            android:id="@+id/sa_ll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <!--android:layout_marginLeft="10dp"-->
            <!--android:layout_marginRight="10dp"-->
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:elevation="2dp"
                app:cardCornerRadius="0dp"
                app:cardElevation="2dp"
                app:contentPaddingBottom="2dp"
                app:contentPaddingLeft="2dp"
                app:contentPaddingRight="2dp"
                app:contentPaddingTop="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/sa_rl_change_source"
                        style="@style/InfoDetail"
                        android:padding="16dp">

                        <TextView
                            style="@style/TextLabel"
                            android:layout_centerVertical="true"
                            android:text="@string/str_sa_change_source" />

                        <Switch
                            android:id="@+id/sa_sw_change_source"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true" />

                    </RelativeLayout>

                    <View style="@style/view_line_h" />

                    <RelativeLayout
                        android:id="@+id/sa_rl_day_night"
                        style="@style/InfoDetail"
                        android:padding="16dp">

                        <TextView
                            style="@style/TextLabel"
                            android:layout_centerVertical="true"
                            android:text="@string/str_sa_day_night" />

                        <Switch
                            android:id="@+id/sa_sw_day_night"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true" />

                    </RelativeLayout>

                    <View style="@style/view_line_h" />

                    <RelativeLayout
                        android:id="@+id/sa_rl_opr_image"
                        style="@style/InfoDetail"
                        android:padding="16dp">

                        <TextView
                            style="@style/TextLabel"
                            android:layout_centerVertical="true"
                            android:text="@string/str_sa_opr_image" />

                        <Switch
                            android:id="@+id/sa_sw_no_image"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:checked="true" />
                    </RelativeLayout>

                    <!--<View style="@style/view_line_h" />-->
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <!--<View-->
            <!--style="@style/view_line_h"-->
            <!--android:layout_marginTop="10dp" />-->

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:elevation="2dp"
                app:cardCornerRadius="0dp"
                app:cardElevation="2dp"
                app:contentPaddingBottom="2dp"
                app:contentPaddingLeft="2dp"
                app:contentPaddingRight="2dp"
                app:contentPaddingTop="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/sa_rl_share"
                        style="@style/InfoDetail"
                        android:padding="16dp">

                        <TextView
                            style="@style/TextLabel"
                            android:text="@string/str_sa_share" />

                    </RelativeLayout>

                    <View style="@style/view_line_h" />

                    <RelativeLayout
                        android:id="@+id/sa_rl_advice"
                        style="@style/InfoDetail"
                        android:padding="16dp">

                        <TextView
                            style="@style/TextLabel"
                            android:text="@string/str_sa_advice" />

                    </RelativeLayout>

                    <View style="@style/view_line_h" />

                    <RelativeLayout
                        android:id="@+id/sa_rl_update"
                        style="@style/InfoDetail"
                        android:padding="16dp">

                        <TextView
                            style="@style/TextLabel"
                            android:text="@string/str_sa_update" />

                        <TextView
                            android:id="@+id/sa_tv_ver"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:textColor="#9c9c9c"
                            android:textSize="@dimen/s12p" />

                        <TextView
                            android:id="@+id/sa_tv_ver_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toLeftOf="@id/sa_tv_ver"
                            android:background="@drawable/round_msg_corner"
                            android:ellipsize="end"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:textSize="6sp"
                            android:visibility="gone" />

                    </RelativeLayout>

                    <View style="@style/view_line_h" />

                    <RelativeLayout
                        android:id="@+id/sa_rl_about"
                        style="@style/InfoDetail"
                        android:padding="16dp">

                        <TextView
                            style="@style/TextLabel"
                            android:text="@string/str_sa_about" />

                    </RelativeLayout>

                    <!--<View style="@style/view_line_h" />-->
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
