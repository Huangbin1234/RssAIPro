<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_margin="16dp"
              android:gravity="center_horizontal"
              android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg"
        android:orientation="vertical"
        app:cardBackgroundColor="@color/bg"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp"
        app:contentPadding="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="16dp"
                android:background="@color/bg"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/pas_tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/str_set_theme"
                    android:textColor="@color/hsb_txt_content"
                    android:textSize="@dimen/s18p"/>

                <View
                    style="@style/view_line_h"
                    android:layout_marginTop="16dp"/>


                <View style="@style/view_line_h"/>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal">

                    <View
                        android:id="@+id/pt_v_red"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@color/color_toolbar_bg"/>

                    <View
                        android:id="@+id/pt_v_blue"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="16dp"
                        android:background="@color/lightblue500"/>

                    <View
                        android:id="@+id/pt_v_green"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="16dp"
                        android:background="@color/teal500"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <View
                        android:id="@+id/pt_v_brown"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@color/brown500"/>

                    <View
                        android:id="@+id/pt_v_orange"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="16dp"
                        android:background="@color/orange500"/>

                    <View
                        android:id="@+id/pt_v_light_green"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="16dp"
                        android:background="@color/green500"/>

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <ImageView
        android:id="@+id/pas_iv_close"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="16dp"
        android:src="@mipmap/ic_del"/>

</LinearLayout>