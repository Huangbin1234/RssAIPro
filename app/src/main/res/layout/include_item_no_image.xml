<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/item_na_layout"
    android:layout_marginBottom="1px"
    android:background="@drawable/ll_selector"
    android:padding="16dp"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/item_na_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:ellipsize="end"
        android:maxLines="2"
        android:paddingTop="10dp"
        android:textColor="@color/text_color_title"
        android:textSize="@dimen/s18p" />

    <LinearLayout
        android:id="@+id/irl_bottom_a"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/item_na_title"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_na_where_from"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/text_color_abstract"
            android:textSize="@dimen/s14p" />

        <TextView
            android:id="@+id/item_na_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginLeft="10dp"
            android:layout_toLeftOf="@+id/item_na_type"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/text_color_time"
            android:textSize="@dimen/s14p" />
    </LinearLayout>
</RelativeLayout>
