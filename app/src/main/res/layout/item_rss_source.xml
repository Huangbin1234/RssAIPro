<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/irs_layout"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/ll_selector"
              android:gravity="center"
              android:padding="16dp"
              android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/irs_iv_logo"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:src="@mipmap/ic_no_sub"/>

        <TextView
            android:id="@+id/irs_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:ellipsize="end"
            android:maxLength="6"
            android:maxLines="1"
            android:textColor="@color/color_txt"
            android:textSize="@dimen/s14p"/>


        <TextView
            android:id="@+id/irs_tv_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="right"
            android:textColor="#CCCCCC"
            android:textSize="@dimen/s12p"/>
    </LinearLayout>
</LinearLayout>