<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/irs_layout"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:gravity="center"
              android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/irs_iv_logo"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:scaleType="centerCrop"
            />

        <TextView
            android:id="@+id/irs_tv_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/irs_iv_logo"
            android:background="@color/bg_theme"
            android:padding="5dp"
            android:textColor="@color/white"
            android:textSize="@dimen/s12p"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/irs_iv_logo"
            android:orientation="vertical">

            <TextView
                android:id="@+id/irs_tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="5dp"
                android:ellipsize="end"
                android:lines="1"
                android:maxEms="6"
                android:textColor="#292929"
                android:textSize="@dimen/s14p"/>


            <!--<TextView-->
            <!--android:id="@+id/irs_tv_count"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginTop="5dp"-->
            <!--android:ellipsize="end"-->
            <!--android:gravity="right"-->
            <!--android:textColor="#CCCCCC"-->
            <!--android:textSize="@dimen/s12p"-->
            <!--android:visibility="gone"/>-->
        </LinearLayout>


    </RelativeLayout>
</LinearLayout>