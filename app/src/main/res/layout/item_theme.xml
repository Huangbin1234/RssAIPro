<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ir_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:background="@color/color_general_white"
    android:gravity="center"
    android:orientation="horizontal">


    <!--<android.support.v7.widget.CardView-->
    <!--android:id="@+id/ir_cd_logo"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:layout_margin="10dp"-->
    <!--android:elevation="4dp"-->
    <!--android:orientation="vertical"-->
    <!--app:cardCornerRadius="4dp"-->
    <!--app:cardElevation="4dp">-->


    <ImageView
        android:id="@+id/ir_iv_logo"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:padding="10dp"
        android:scaleType="centerInside" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignBottom="@id/ir_iv_logo"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/ir_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:ellipsize="end"
            android:lines="1"
            android:textColor="@color/hsb_txt_title"
            android:textSize="@dimen/s16p" />

        <TextView
            android:id="@+id/ir_tv_abs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:ellipsize="end"
            android:lines="2"
            android:textColor="@color/hsb_txt_abstract"
            android:textSize="@dimen/s14p" />
    </LinearLayout>


    <!--</android.support.v7.widget.CardView>-->
</LinearLayout>