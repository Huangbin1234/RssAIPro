<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_na_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="16dp">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7">

            <TextView
                android:id="@+id/item_na_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:ellipsize="end"
                android:maxLines="2"
                android:paddingTop="16dp"
                android:textColor="@color/color_title"
                android:textSize="@dimen/s16p" />

            <LinearLayout
                android:id="@+id/irl_bottom_a"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/item_na_title"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:id="@+id/item_na_type_a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:textColor="@color/color_time"
                    android:textSize="@dimen/s14p" />

                <TextView
                    android:id="@+id/item_na_time_a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_toLeftOf="@+id/item_na_type"
                    android:textColor="@color/color_time"
                    android:textSize="@dimen/s14p" />
            </LinearLayout>


        </RelativeLayout>

        <ImageView
            android:id="@+id/item_na_img"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_weight="3"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_place"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/item_na_group_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="16dp"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/item_na_group_a"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_place" />

            <View
                android:layout_width="10dp"
                android:layout_height="90dp" />

            <ImageView
                android:id="@+id/item_na_group_b"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_place" />

            <View
                android:layout_width="10dp"
                android:layout_height="90dp" />

            <ImageView
                android:id="@+id/item_na_group_c"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_place" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/irl_bottom_b"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:orientation="horizontal"
            android:paddingTop="16dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/item_na_type_b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:textColor="@color/color_time"
                android:textSize="@dimen/s14p" />

            <TextView
                android:id="@+id/item_na_time_b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toLeftOf="@+id/item_na_type_b"
                android:textColor="@color/color_time"
                android:textSize="@dimen/s14p" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>