<?xml version="1.0" encoding="utf-8"?><!--<android.support.v7.widget.CardView--><!--xmlns:android="http://schemas.android.com/apk/res/android"--><!--xmlns:app="http://schemas.android.com/apk/res-auto"--><!--android:id="@+id/cardView"--><!--android:layout_width="match_parent"--><!--android:layout_height="100dp"--><!--android:layout_marginBottom="8dp"--><!--android:layout_marginLeft="10dp"--><!--android:layout_marginRight="10dp"--><!--android:layout_marginTop="8dp"--><!--android:clickable="true"--><!--android:focusable="true"--><!--app:cardElevation="3dp"--><!--app:cardCornerRadius="3dp"--><!--android:foreground="?android:attr/selectableItemBackground"--><!--android:paddingRight="16dp"  >--><!---->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1px"
        android:background="@drawable/ll_selector"
        android:orientation="horizontal"
        android:padding="11dp">

        <android.support.v7.widget.CardView
            android:id="@+id/ir_cd_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="5dp"
            android:background="@drawable/ll_selector"
            android:elevation="4dp"
            android:orientation="vertical"
            app:cardCornerRadius="2dp"
            app:cardElevation="2dp">

            <ImageView
                android:id="@+id/item_sla_iv"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_gravity="center_vertical"
                android:scaleType="centerCrop" />
        </android.support.v7.widget.CardView>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="6dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:id="@+id/item_sla_tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:text="122112"
                android:textColor="@color/text_color_title"
                android:textSize="@dimen/s16p" />

            <TextView
                android:id="@+id/item_sla_tv_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/item_sla_tv_name"
                android:layout_marginTop="8dp"
                android:text="122112"
                android:textColor="@color/text_color_abstract"
                android:textSize="@dimen/s12p" />

            <TextView
                android:id="@+id/item_sla_tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/item_sla_tv_count"
                android:layout_toRightOf="@id/item_sla_tv_count"
                android:text="122121"
                android:textColor="@color/text_color_abstract"
                android:textSize="@dimen/s12p" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/item_sla_iv_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/ic_more_vert_black_24dp" />
            <!--android:src="@mipmap/ic_list_more"-->

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="11dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/item_sla_iv_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/item_sla_iv_menu"
            android:layout_alignRight="@id/item_sla_iv_menu"
            android:scaleType="centerInside"
            android:src="@mipmap/ic_top_tag" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerInside"
            android:src="@mipmap/ic_list_more"
            android:visibility="invisible" />
    </LinearLayout>


</RelativeLayout><!--</android.support.v7.widget.CardView>-->