<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1px"
        android:background="@drawable/ll_selector"
        android:orientation="horizontal"
        android:padding="16dp">

        <ImageView
            android:id="@+id/item_sla_iv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/more_round_corner"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="16dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_sla_tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:textColor="@color/color_list_txt"
                android:textSize="@dimen/s16p"/>

            <TextView
                android:id="@+id/item_sla_tv_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/item_sla_tv_name"
                android:layout_marginTop="10dp"
                android:textColor="#9c9c9c"
                android:textSize="@dimen/s12p"/>

            <TextView
                android:id="@+id/item_sla_tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/item_sla_tv_count"
                android:layout_toRightOf="@id/item_sla_tv_count"
                android:textColor="#9c9c9c"
                android:textSize="@dimen/s12p"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/item_sla_iv_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerInside"
                android:src="@mipmap/ic_list_more"/>
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="16dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/item_sla_iv_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/item_sla_iv_menu"
            android:layout_alignRight="@id/item_sla_iv_menu"
            android:scaleType="centerInside"
            android:src="@mipmap/ic_top_tag"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerInside"
            android:src="@mipmap/ic_list_more"
            android:visibility="invisible"/>
    </LinearLayout>


</RelativeLayout>
