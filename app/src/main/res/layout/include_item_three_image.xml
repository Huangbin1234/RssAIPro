<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_na_group_ll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:visibility="visible">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/item_na_group_a"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:background="@color/gray_light"
            android:scaleType="centerCrop" />

        <View
            android:layout_width="8dp"
            android:layout_height="80dp" />

        <ImageView
            android:id="@+id/item_na_group_b"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:background="@color/gray_light"
            android:scaleType="centerCrop" />

        <View
            android:layout_width="8dp"
            android:layout_height="80dp" />

        <ImageView
            android:id="@+id/item_na_group_c"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:background="@color/gray_light"
            android:scaleType="centerCrop" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/irl_bottom_b"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:visibility="visible">

        <TextView
            android:id="@+id/item_na_type_b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/text_color_abstract"
            android:textSize="@dimen/s14p" />

        <TextView
            android:id="@+id/item_na_time_b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toLeftOf="@+id/item_na_type_b"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/text_color_time"
            android:textSize="@dimen/s14p" />
    </LinearLayout>
</LinearLayout>
