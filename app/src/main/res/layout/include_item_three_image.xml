<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_na_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="1px"
    android:background="@drawable/ll_selector"
    android:orientation="vertical"
    android:padding="16dp"
    android:visibility="visible">

    <TextView
        android:id="@+id/item_na_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@color/hsb_txt_title"
        android:textSize="@dimen/s18p" />

    <LinearLayout
        android:id="@+id/item_na_image_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/item_na_image_a"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:background="@drawable/round_register" />

        <View
            android:layout_width="8dp"
            android:layout_height="80dp" />

        <ImageView
            android:id="@+id/item_na_image_b"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:background="@drawable/round_register" />
        <!--android:scaleType="fitCenter"-->
        <View
            android:layout_width="8dp"
            android:layout_height="80dp" />

        <ImageView
            android:id="@+id/item_na_image_c"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:background="@drawable/round_register" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/irl_bottom_b"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:visibility="gone">

        <ImageView
            android:id="@+id/item_iv_logo"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginRight="10dp"
            android:scaleType="centerInside"
            android:src="@mipmap/icon_default_avar"
            android:visibility="gone" />

        <TextView
            android:id="@+id/item_na_where_from"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/hsb_txt_abstract"
            android:textSize="@dimen/s12p" />

        <TextView
            android:id="@+id/item_na_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toLeftOf="@+id/item_na_where_from_three"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/hsb_txt_label"
            android:textSize="@dimen/s12p" />
    </LinearLayout>
</LinearLayout>
