        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/color_general_line" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="10dp"
            android:background="@color/color_general_line" />

        <LinearLayout
            style="@style/InfoDetail"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/mpa_tv_new_psd_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_weight="2"
                android:gravity="left"
                android:text="新密码"
                android:visibility="gone"
                android:textColor="@color/text_color_new"
                android:textSize="@dimen/s16p" />

            <EditText
                android:id="@+id/mpa_et_new_psd"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="8"
                android:drawablePadding="10dp"
                android:background="@color/trans"
                android:hint="@string/str_mpa_hint_new_psd"
                android:inputType="textPassword"
                android:maxLength="16"
                android:padding="16dp"
                android:singleLine="true"
                android:textColor="@color/text_color_new"
                android:textColorHint="#BBBBBB"
                android:textSize="@dimen/s16p"
                android:theme="@style/EditUnderLineStyle" />

            <CheckedTextView
                android:id="@+id/la_chktv_new_psd_control"
                android:layout_width="30dp"
                android:layout_height="18dp"
                android:layout_gravity="center_vertical"
