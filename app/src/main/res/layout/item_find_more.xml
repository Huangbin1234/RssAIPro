<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginBottom="10dp"
              android:orientation="vertical"
              android:paddingLeft="16dp"
              android:paddingRight="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingTop="10dp">

        <TextView
            android:singleLine="true"
            android:id="@+id/ifm_tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="9"
            android:textColor="#4a4b4d"
            android:textSize="@dimen/s18p"/>

        <ImageView
            android:id="@+id/ifm_iv_add"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="16dp"
            android:layout_gravity="right|center_vertical"
            android:scaleType="centerInside"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ifm_iv_img"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_place"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:gravity="bottom"
            android:orientation="vertical">


            <!--<TextView-->
            <!--android:id="@+id/ifm_tv_abstract"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:ellipsize="end"-->
            <!--android:maxLines="3"-->
            <!--android:textColor="#9c9c9c" />-->
            <com.hb.rssai.view.widget.JustifyTextView
                android:id="@+id/ifm_tv_abstract"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="3"
                android:text="12222222"
                android:textColor="#9c9c9c"/>

            <TextView
                android:id="@+id/ifm_tv_people"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12222222"
                android:textColor="#9c9c9c"
                android:textSize="10sp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>