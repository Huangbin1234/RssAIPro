<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginBottom="10dp"
              android:paddingLeft="16dp"
              android:paddingRight="16dp"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"  >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/ifm_tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_gravity="center_vertical"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="@color/color_list_txt"
                android:textSize="17sp"/>

            <TextView
                android:id="@+id/ifm_tv_whereFrom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_below="@id/ifm_tv_title"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="#9c9c9c"
                android:textSize="@dimen/s12p"/>
        </RelativeLayout>

        <ImageView
            android:id="@+id/ifm_iv_img"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:visibility="gone"
            android:scaleType="fitCenter"
            android:background="@drawable/round_register"
            />

    </LinearLayout>

</LinearLayout>