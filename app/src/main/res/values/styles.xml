<resources>

    <style name="AppTheme" parent="Theme.AppCompat.DayNight">
        <item name="colorPrimary">@color/color_toolbar_bg</item>
        <item name="colorPrimaryDark">@color/bg_theme</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionMenuTextColor">@color/white</item>
    </style>

    <style name="ClubToolbar" parent="Widget.AppCompat.Toolbar">
        <item name="contentInsetStart">0dp</item><!-- 设置该属性解决空白部分-->
        <item name="contentInsetStartWithNavigation">0dp</item><!-- 设置该属性解决空白部分-->
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">#05896f</item>
        <item name="toolbarStyle">@style/ClubToolbar</item>
        <item name="colorAccent">@color/color_toolbar_bg</item>
        <item name="android:listDivider">@drawable/divider</item>
        <item name="toolbarNavigationButtonStyle">@style/myToolbarNavigationButtonStyle</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="myToolbarNavigationButtonStyle" parent="@style/Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="android:minWidth">0dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="myToolbarNavigationButtonStyleNew" parent="@style/Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="android:minWidth">0dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <!--代码设置主题风格 主要是控制toolbar左边距-->

    <!-- toolbar菜单样式 -->
    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="actionMenuTextColor">@android:color/white</item>
    </style>

    <style name="AppTheme.NoActionBar.Night">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorControlNormal">@color/gray_deep</item>
        <!-- AppCompatEditText选择的底线颜色 -->
        <item name="colorControlActivated">#05896f</item>
        <item name="toolbarStyle">@style/ClubToolbar</item>
        <item name="colorAccent">@color/gray_deep</item>
    </style>

    <style name="SplitLine_h">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/color_general_line</item>
    </style>

    <style name="title_all">
        <item name="android:background">@color/color_toolbar_bg</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <style name="title_all_content">
        <item name="android:background">@color/rich_toolbar_bg</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <style name="InfoDetail">
        <item name="android:clickable">true</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@drawable/ll_selector</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="view_line_h">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/color_general_line</item>
    </style>

    <style name="TextLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/color_txt</item>
        <item name="android:textSize">@dimen/s16p</item>
    </style>

    <style name="TabLayoutStyle" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/TabTextAppearence</item>
    </style>

    <style name="TabTextAppearence" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
    </style>

    <style name="AppTheme.NoActionBar.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.NoActionBar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!--TODO 修改actionbar返回按钮颜色为黑色-->
    <style name="backWhite" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorControlNormal">@android:color/black</item>
    </style>
    <!--TODO 下面为夜间模式切换相关-->
    <style name="AppTheme2" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <!--<item name="colorPrimaryDark">@color/colorPrimaryDark</item>-->
        <item name="colorPrimaryDark">@color/bg_theme</item>
        <!--<item name="colorAccent">@color/colorAccent</item>-->
        <!--&lt;!&ndash;customize your theme here&ndash;&gt;-->
        <!--<item name="windowNoTitle">true</item>-->
        <!--<item name="windowActionBar">false</item>-->
        <!--<item name="colorControlNormal">@color/white</item>-->
        <!--<item name="colorControlActivated">#05896f</item>-->
        <!--<item name="toolbarStyle">@style/ClubToolbar</item>-->
        <!--<item name="android:listDivider">@drawable/divider</item>-->
        <!--<item name="toolbarNavigationButtonStyle">@style/myToolbarNavigationButtonStyle</item>-->
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">#05896f</item>
        <item name="toolbarStyle">@style/ClubToolbar</item>
        <item name="colorAccent">@color/color_toolbar_bg</item>
        <item name="android:listDivider">@drawable/divider</item>
        <item name="toolbarNavigationButtonStyle">@style/myToolbarNavigationButtonStyle</item>

    </style>
    <!--<item name="android:windowTranslucentStatus">true</item>-->
    <style name="WindowAnimationFadeInOut">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>

    <color name="color_general_line">#DDDDDD</color>

    <!--tablayout 文字大小统一-->
    <style name="TextAppearance.Design.Tab.Custom" parent="TextAppearance.AppCompat.Button">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?android:textColorSecondary</item>
        <item name="textAllCaps">true</item>
    </style>

    <!--头像上传动画-->
    <style name="PopupAnimation" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/popup_enter</item>
        <item name="android:windowExitAnimation">@anim/popup_exit</item>
    </style>
</resources>
